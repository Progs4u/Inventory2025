mixin itemLocation(item)
  div(class="mb-4")
    h3(class="text-lg font-semibold mb-2") Location Information
    if item.container_name
      p(class="text-gray-700") 
        span(class="font-medium") Container: 
        span= item.container_name
      if item.storage_name
        p(class="text-gray-700") 
          span(class="font-medium") Storage: 
          span= item.storage_name
    else if item.storage_name
      p(class="text-gray-700") 
        span(class="font-medium") Storage: 
        span= item.storage_name
    if item.room_name
      p(class="text-gray-700") 
        span(class="font-medium") Room: 
        span= item.room_name
