mixin containerForm(action, method, container = {}, rooms = [], storages = [], modalId, qrUuid)
  form(id="form-addContainer" action=action method=method class="space-y-4")
    div
      label(class="block text-sm font-medium text-gray-700") Name
      input(type="text" name="name" value=container.name required 
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm")
    
    div
      label(class="block text-sm font-medium text-gray-700") Description
      textarea(name="description" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm")
        = container.description
    
    div
      label(class="block text-sm font-medium text-gray-700") Room
      select(name="room_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm")
        option(value="") -- Select Room --
        each room in rooms || []
          option(value=room.id selected=container.room_id === room.id)= room.name

    div
      label(class="block text-sm font-medium text-gray-700") Storage
      select(name="storage_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm")
        option(value="") -- Not in Storage --
        each storage in storages || []
          option(value=storage.id selected=container.storage_id === storage.id)= storage.name
    
    button(type="submit" 
      class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700") Save